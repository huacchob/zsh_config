[commit]
    verbose = true

[core]
    autocrlf = input
    compression = 9
    fsync = none
    whitespace = error
    preloadindex = true
    editor = vim

[alias]
    st = status
    ci = commit
    co = checkout
    br = branch
    hist = log --graph --oneline --all --decorate
    last = log -1 HEAD
    type = cat-file -t
    dump = cat-file -p
    lg = log --graph --abbrev-commit --decorate --all --pretty=oneline

[blame]
    coloring = highlightRecent
    date = relative

[diff]
    colorMoved = default
    context = 3
    renames = copies
    interHunkContext = 10
    tool = nvimdiff

[merge]
    conflictstyle = diff3
    tool = nvimdiff

[init]
    defaultBranch = main

[log]
    abbrevCommit = true
    graphColors = blue,yellow,cyan,magenta,green,red
    date = relative

[status]
    branch = true
    short = true
    showStash = true
    showUntrackedFiles = all

[pager]
    branch = false
    tag = false
    diff = diff-so-fancy | less --tabs=4 -RFX
    log = diff-so-fancy | less --tabs=4 -RFX
    show = diff-so-fancy | less --tabs=4 -RFX

[push]
    autoSetupRemote = true
    default = current
    followTags = true

[pull]
    rebase = true
    default = current

[submodule]
    fetchJobs = 16

[rebase]
    autoStash = true
    missingCommitsCheck = warn

[pack]
